@using EightElements.Data.Rest.Models;
@{
    bool hasDownloadTransaction = (bool)ViewData["HasDownloadTranscations"];
}



<div class="section">
    <div class="section__header">
        @Resources.Strings.Purchase_MyDownload
    </div>
    
