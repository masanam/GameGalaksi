<div id="top">
    @Html.PortalText("SubscribeJoinText")
</div>
<div id="container" class="gradient-pale">
    @{if ((bool)ViewData["CanStillUseFirstWeekFree"])
      {
        <div class="first-week-free" style="padding: 3% 10px; color: #FFFF45; font-weight: bold">
            @Html.PortalText("SubscribeFirstWeekFree")
        </div>
      }}
    <div class="text-about-price" align="center">
        @Html.PortalText("SubscribePriceText")
    </div>
    <div id="btn-subscribe-and-save" class="subscribe-button">
        <a href="#" onclick="subscribeAction();">
            @Resources.Strings.Subscribe_Save
        </a>
    </div>
    <div id="pictures" class="element" align="center">
        @{
        
            @Html.PortalImage("HotGame1", true, "portalimage", "", "width:28%")
            @Html.PortalImage("HotGame2", true, "portalimage", "", "width:28%")
            @Html.PortalImage("HotGame3", true, "portalimage", "", "width:28%") 
            @* @{ Html.RenderAction("GetTopFeatures", "Common"); }*@ 
        }
    </div>
    <div id="benefits" class="element">
        <div class="intro" align="center">
            @Html.Raw(String.Format(Resources.Strings.Subscribe_Benefits, "<br/>"))
        </div>
        <!--   @{if ((bool)ViewData["CanStillUseFirstWeekFree"])
                 { 
    <div class="first-week-free" style="padding: 3% 10px;font-weight:bold">
        @Resources.Strings.Subscribe_LimitedTime
    </div>
                 }}  -->
        @Html.PortalText("SubscribeBenefit")
    </div>
    <div class="element">
        <div id="btn-join" class="btn-curved gradient-green-dark subscribe-button">
            <a href="#" onclick="subscribeAction();">@Html.Raw(string.Format(Resources.Strings.Subscribe_YesJoin, "<br/>"))
            </a>
        </div>
    </div>
    <div id="get-a-free-game">
        @Html.Raw(string.Format(Resources.Strings.Subscribe_FreeWeekly, "<br/>"))
    </div>
    @Html.PortalText("InmobiLandingPage")
</div>
