<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/cssFP")
    @Styles.Render("~/bundles/fp-css-mod")
    @if (ViewBag.PortalID != EightElements.Data.DAPortal.CelcomPortalId)
    {
        Html.RenderPartial("GoogleAnalyticsTrackingCode", new EightElements.Data.Rest.Models.Tracking(ViewBag.GoogleAnalyticsAccount)); 
    }
</head>
@RenderSection("style", required: false)
<body vlink="black">    
    @Html.Partial("_Layout_FP_Top")
    @RenderBody()
    <div class="footer">
        @Resources.Strings.Layout_Footer
        <br />
        <a class="terms" href=@Url.Content("~/Terms")>@Resources.Strings.Layout_Terms</a>
        <span>|</span>
        <a class="terms" href=@Url.Content("~/Help")>
            @Resources.Strings.Layout_Help</a>
        <div class="footer__year">
            &copy; @DateTime.Today.Year    
        </div>
        
    </div>
</body>
@RenderSection("scripts", required: false)
</html>
