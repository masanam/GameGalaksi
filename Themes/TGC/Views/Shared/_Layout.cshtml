            )
        {
        <div id="join"></div>
        }}*@

<div class="footer-menu">
    <a href=@Url.Action("MyAccount", "VideoHome")>
        >> @Resources.Strings.Layout_MyAccount
    </a>
    <a href=@Url.Action("Index", "VideoHome")>
        >> @Resources.Strings.Layout_Home
    </a>
</div>

<footer>

    <div class="page-footer">
        <a class="page-footer__link" href=@Url.Content("~/Terms")> @Resources.Strings.Layout_Terms</a>
        &nbsp;|&nbsp;
        <a class="page-footer__link" href="/Help">@Resources.Strings.Layout_Help</a>
        <br/>
        &copy;&nbsp;@DateTime.Now.Year
    </div>
</footer>

    @RenderSection("scripts", required: false)

</body>

</html>
