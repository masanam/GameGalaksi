@{
    ViewBag.Title = "MyAccount";
}


<div class="account gradient">
    
    <div class="section-header">
        <div class="section-header__title">@Resources.Strings.MyAccount_MyAcount</div>
    </div>

    <div class="account__info">
        <div class="account__info-label">@Resources.Strings.MyAccount_Msisdn</div>
        <div class="account__info-text">@ViewBag.Msisdn</div>
    </div>

    <div class="account__info">
        <div class="account__info-label">@Resources.Strings.MyAccount_Credit</div>
        <div class="account__info-text">@ViewData["credits"]</div>
    </div>

    <div class="account__info">
        @if ((bool) ViewData["NonSub"])
        {
            @Html.PortalText("MyAccount_NonSubscriberMessage")
        }
        else
        {
            @Html.PortalText("MyAccount_SubscriberMessage")
        }
    </div>

</div>
 

<div class="default-items">
    @{
        Html.RenderPartial("ContentPartial");
    }
</div>