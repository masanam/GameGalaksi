@using EightElements.Data.Models

@{
    int contentId = (int) ViewBag.ContentId;
    string title = ViewBag.Title;
    string description = ViewBag.Description;
    var price = (IPrice) ViewBag.Price;
    string confirmationText = String.Format(PortalMvcHelper.PortalText("PurchaseConfirmation"), price.Currency, price.Amount.ToString("N0"));
}


<div class="confirm-dialog">
    <div class="video-title">@title</div>
    <div><img src="/videohome/getimage?cid=@contentId"/></div>
    <div class="video-description">@description</div>

    @Html.Raw(confirmationText)

    <div class="button-container">
        <a href="@Url.Action("Purchase", new {contentId=@contentId, ppd = true})">Yes</a>
        <a href="@Url.Action("Index")">Cancel</a>
    </div>
</div>

<hr/>

<div class="default-items">
    @{
        Html.RenderPartial("ContentPartial");
    }
</div>