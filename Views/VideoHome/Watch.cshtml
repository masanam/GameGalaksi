@{
    ViewBag.Title = "Watch";
    string mimeType = ViewBag.MimeType;
    int contentId = ViewBag.ContentId;
}

<div class="list-item">
    <div class="section-title">Watch</div>

    <div>
        <video width="100%" controls poster="@ViewBag.ImageUrl">
            <source src="@ViewBag.VideoUrl" type="@mimeType"/>
            <em>Sorry, your browser doesn't support HTML5 video.</em>
        </video>
    </div>
</div>


