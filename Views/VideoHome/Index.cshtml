
@{
    int availableVideo = Convert.ToInt32(ViewBag.AvailableVideo);
    string category = ViewBag.Category;
    int count = Convert.ToInt32(ViewBag.Count + 4);
    string url = String.Format("/videohome/index?category={0}&count={1}", category, count);

    string credit = ViewData["credits"].ToString();
    string a = PortalMvcHelper.PortalText("SubscriberMessage");
    string displayText = String.Format(a, credit);
}


@section menu {

}

<div class="menu-bar">
    <ul class="menu">
        <li><a href="@Url.Action("Index", new {category = "P"})">Popular</a></li>
        <li><a href="@Url.Action("Index", new {category = "N"})">New</a></li>
        <li><a href="@Url.Action("Index", new {category = "H"})">The Club</a></li>
    </ul>
</div>

<div>

    <div class="info-text">
        @Html.Raw(displayText)
    </div>


    @{
        Html.RenderPartial("BannerContent");
    }

    <div class="align-center">
        <a href="/videohome/confirmsubscribe">
            <img src="~/Images/General/VideoPortal/static_banner_1.jpg" width="90%"/>
        </a>    
    </div>
    

    <div class="default-items">
        @{
            Html.RenderPartial("ContentPartial");
        }
    </div>


    @if (count < availableVideo)
    {
        <div class="button-container">
            <a href="@url">More ...</a>
        </div>
    }

</div>
